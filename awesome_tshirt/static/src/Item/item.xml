<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="awesome_tshirt.item" owl="1">
        <div class="card" style="width: 18rem;" t-att-class="props.className">
            <t t-if="props.slots.title"> 
                <h5 class="card-title"><t t-slot="title"/></h5>
            </t>
            <div class="card-body d-flex justify-content-center font-weight-bold">
                <p class="card-text text-center text-success"><t t-slot="default"/></p>
            </div>
        </div>
    </t>
</templates>